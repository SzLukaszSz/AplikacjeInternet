<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="webstorePU" transaction-type="RESOURCE_LOCAL">
		<class>com.packt.webstore.domain.Product</class>
		<class>com.packt.webstore.domain.Cart</class>
		<class>com.packt.webstore.domain.CartItem</class>
		<class>com.packt.webstore.domain.Address</class>
		<class>com.packt.webstore.domain.Customer</class>
		<class>com.packt.webstore.domain.Order</class>
		<class>com.packt.webstore.domain.ShippingDetail</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
</persistence>
